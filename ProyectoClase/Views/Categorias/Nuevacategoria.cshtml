@model RegistroCatViewModel
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewData["Tittle"] = "Nueva Categoria";
}
<div class="content-wrapper" style="min-height: 519px;">
    <h2>Nueva Categoria</h2>
    <form asp-action ="Insert" method="post" >
       
        <div class="form-group">
            <label asp-for="nombrecategoria">Nombre de la Categoria</label>
            <input class="form-control" type="text" asp-for="nombrecategoria" required/>
        </div>

        <div class="form-group">
            <label asp-for="descripcioncategoria">Detalles de la Categoria</label>
            <input class="form-control" type="text" asp-for="descripcioncategoria" required/>
        </div>

        <button class="btn btn-outline-success" type="submit">Crear Categoria</button>
    </form>
</div>